# aliases
# ls aliases
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -l -a"

# programs
alias lg="lazygit"
alias dive="podman run -it --rm wagoodman/dive"
alias ch="chezmoi"
alias ze="zellij"

# fedora
alias fkrbi="fkinit -u 'dogphilosopher'"
alias fkrbr="kinit -R"

# decomment a config file
alias decomment='grep -v -E "^[[:space:]]*((#|;|//).*)?$"'

# check justfile
alias check-just="just --unstable --fmt --check -f"

# create distroboxes from ini file
alias mk-dbx='distrobox assemble create --file ~/.distrobox.ini'

# vpn
alias home-connect="sudo tailscale up --exit-node fw --accept-route"
alias home-disconnect="sudo tailscale down"
